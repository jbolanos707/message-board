{{#if isEditing}}

  <form>
    <div class="form-group">
      <label for="author">Name</label>
      {{input id="author" class="form-control" value=author}}
    </div>
    <div class="form-group">
      <label for="question">Question</label>
      {{input id="question" class="form-control" value=question}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      {{textarea id="description" class="form-control" rows="15" value=description}}
    </div>

    <button class="btn btn-default btn-xs" {{action 'save'}}>Save</button>

  </form>

  {{else}}

<div class="jumbotron">
  <div class="page-header">
  <h2>{{question}} <small>{{author}}</small></h2>
</div>
  <!-- <h2>{{question}}<font size="3"><em>{{author}}</em></font></h2> -->
  <br>
  <p>{{description}}</p>

  <button class="btn btn-default btn-xs questionbtn" {{action 'edit'}}>Edit</button>
  <button class="btn btn-default btn-xs questionbtn" {{action 'delete'}}>Delete</button>
</div>

{{/if}}

<p class="lead">Answers</p>
  {{#each answers}}
    <p>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">{{text}}</div>
    </div>
      <!-- {{text}}<a href='#' class="glyphicon glyphicon-remove-circle"{{action 'deleteAnswer'}}>Delete</a> -->
    </p>
  {{/each}}


<p>{{#link-to 'new-answer' this.id class="btn btn-default answerbtn"}}Post A Response{{/link-to}}</p>

{{outlet}}
